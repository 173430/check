<div class="sample08">
<h1>My Chat</h1>
</div>

<div class="header">
    <link rel="stylesheet" href="application.css" type="text/css">
    <h2><td><%= link_to 'My Note', mypage_mynote_path(@user.id), class: "btn-flat-border" %></td>
    <td><%= link_to 'My Chat', mypage_mychat_path(@user.id), class: "btn-flat-border" %></td>
    <td><%= link_to 'My Question', mypage_myquestion_path(@user.id), class: "btn-flat-border" %></td></h2>
</div>

<p id="notice"><%= notice %></p>

<div class="sample08">
<h1>Contents of Group</h1>
</div>

<table>
  <thead>
    <tr>
      <th>グループ名</th>
      <th>アイコン</th>      
      <th>管理者名</th>
      <th>公開設定</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @groups.each do |group| %>
       <tr>
       <td><%= group.name %></td>
       <td></td>
       <td><%= group.user_id %></td>
       <td>
         <% if group.release == true %>
           公開
         <% else %>
           非公開
         <% end %>
       <td><%= link_to '入室する',chat_show_path(group_id: group.id), class: "cp_btn" %></td>
      </tr>
   <% end %>
  </tbody>
</table>
