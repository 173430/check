<div class="sample08">
<h1>パスワードを変更する</h1>
</div>

<%= form_for(@user, url: 'editcheck') do |f| %>

    <% if flash[:alart] %>
  <div class="alert alert-danger">
    <%= flash[:alart] %>
  </div>
  <% end %>

<div class="field" style="text-align:center;">
<h5>ユーザID</h5>
<h3><%= @user.userid %></h3>
<h5>名前</h5>
<h3><%= @user.name %></h3>
</div>

<br>

<div class="field" style="text-align:center;">
<%= f.label :新しいパスワードを入力してください %>
<br>
<%= f.password_field :password %>
</div>

<div class="field" style="text-align:center;">
<%= f.label :確認のためもう一度入力してください %>
<br>
<%= f.password_field :subpassword %>
</div>



<div class="actions" style="text-align:center;">
<form>
<p><input class="btn-flat-simple" type="submit" value="変更する"></p>
</form>
</div>

<% end %>