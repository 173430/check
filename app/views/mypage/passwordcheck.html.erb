<%= form_for(@user, url: 'passwordequal') do |f| %>
    
  <% if flash[:alart] %>
  <div class="alert alert-danger">
    <%= flash[:alart] %>
  </div>
  <% end %>

<div class="field" style="text-align:center;">
<h3>ユーザID</h3>
<br>
<h1><%= @user.userid %></h1>
</div>

<br>

<div class="field" style="text-align:center;">
<%= f.label :現在のパスワードを入力してください %>
<br>
<%= f.password_field :password %>
</div>

<div class="actions" style="text-align:center;">
<%= f.submit '次へ' %>
</div>

<% end %>
