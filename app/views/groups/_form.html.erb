<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h4>
<div class="form-text">  
  <div class="field">
    <%= form.label :グループ名 %>
    <%= form.text_field :name, :size=>"30", placeholder: "グループ名を入力してください" %>
  </div>

  <div class="field">
    <%= form.label :アイコン %>
    <%= form.file_field :icon %>
  </div>

  <div class="field">
    <%= form.label :管理者 %>
    <%= form.text_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :公開する %>
    <%= form.check_box :release %>
  </div>

  <div class="actions">
  <form>
  <p><input class="btn-flat-simple" type="submit" value="内容を確定する"></p>
  </form>
  </div>
</h4>
</div>  
<% end %>
