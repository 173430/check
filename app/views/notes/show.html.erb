<div class="sample08">
<h1>ノート内容</h1>
</div>

<p id="notice"><%= notice %></p>

<%= link_to '編集', edit_note_path(@note), class: "btn-flat-border" %> |
<%= link_to 'ノート一覧', notes_path, class: "btn-flat-border" %>

<h4>
<p>
<span class="text"><strong>投稿者&nbsp;&nbsp;&nbsp;</strong></span>
<span class="form-text"><%= @note.user.name %></span>
</p>

<p>
<span class="text"><strong>タイトル&nbsp;</strong></span>
<span class="form-text"><%= @note.title %></span>
</p>

<p>
<span class="text"><strong>表紙</strong></span>
  <p class="img300-900" style="margin-bottom: 25px;">  
  <% if @note.coverpicture.present? %>
    <label for="p01">
      <input type="checkbox" id="p01">
        <%= image_tag(asset_path('notes/cover/' + @note.id.to_s + '/' + @note.coverpicture), :width => '30%') %>
    </label>  
  <% end %>
</p>


<p>
<span class="text"><strong>ノート</strong></span>
<span class="text"></span>
<p class="img300-900" style="margin-bottom: 25px;">  
  <% if @note.picture.present? %>
  <label for="p02">
    <input type="checkbox" id="p02">
      <% @notepictures.each do |notepicture| %>
        <%= image_tag(asset_path('notes/contents/' + @note.id.to_s + '/' + notepicture.picture), :width => '30%') %>
      <% end %>
  </label>
  <% end %>
</p>

<p>
<span class="text"><strong>学年&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</strong></span>
<span class="form-text"><%= @note.grade.grade %></span>
</p>

<p>
<span class="text"><strong>教科&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</strong></span>
<span class="form-text"><%= @note.subject.subjectname %></span>
</p>

<p>
<span class="text"><strong>補足&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</strong></span>
<span class="form-text"><%= @note.extra %></span>
</p>

<p>
<span class="text"><strong>いいね&nbsp;&nbsp;&nbsp;</strong></span>
  <%= @note.good %>
</p>

<p>
<span class="text"><strong>公開&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</strong></span>
  <td>
  <span class="form-text">
  <% if @note.release == true %>
    公開中
  <% else %>
    非公開中
  <% end %>
  </span>
</td>
</p>
</h4>

<% if @user.id == @note.user_id %>

<div class="container">
  <div class="btn-open">
  <%= link_to '編集', edit_note_path(@note) %>
  </div>
  <% if @note.release == true %>
    <div class="btn-open">
      <%= link_to '非公開にする', @note, method: :releasechange, data: { confirm: '非公開にしますか？' } %>
    </div>
  <% else %>
    <div class="btn-open">
      <%= link_to '公開する', @note, method: :delete, data: { confirm: '公開しますか？' } %>
    </div>
  <% end %>
  
  <div class="btn-open">
    <%= link_to '削除', @note, method: :delete, data: { confirm: '本当に削除押しますか？' } %>
  </div>
</div>

<% end %>

