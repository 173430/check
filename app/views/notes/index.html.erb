<p id="notice"><%= notice %></p>

<div class="sample08">
<h1>ノート一覧</h1>
</div>

<div class="container">
<a href="http://localhost:3000/notes/new" class="btn-open">ノートを作る</a>
</div>

<table style="border-collapse: collapse" border="1" width="640" height="480">

  <tbody>
    <% @notes.each do |note| %>
      
      <td>
        <table>
          <tr>
          <td>
            <% if note.coverpicture.present? %>
            <br>
            <div class="img_wrap">
            <a href="#"><%= image_tag(asset_path('notes/cover/' + note.id.to_s + '/' + note.coverpicture), :width => '100%') %></a>
            </div>
            <% end %>
          </td>
          </tr>
          <tr>
          <td>
            <%= note.title %><br>
            <%= note.user.name %><br>
            <%= note.grade.grade %><br>
            <%= note.subject.subjectname %><br>
            <%= note.good %>
          </td>
          </tr>
        </table>
      </td>

    <% end %>
  </tbody>
</table>
