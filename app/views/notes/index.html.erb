<p id="notice"><%= notice %></p>

<div class="sample08">
<h1>ノート一覧</h1>
</div>

<div class="container">
<a href="http://localhost:3000/notes/new" class="btn-open">ノートを作る</a>
</div>

<table style="border-collapse: collapse">

<tr>
  <table>
  <tbody>
    <tr>
    <% @notes.each do |note| %>
        <body>
        <td>
        <table>
          <tr>
            <% if note.coverpicture.present? %>
            <div class="img_wrap">
            <a href="#"><%= image_tag(asset_path('notes/cover/' + note.id.to_s + '/' + note.coverpicture), :width => '50%') %></a>
            </div>
            <% end %>
          </tr>
          <tr>
            <%= note.title %><br>
            <%= note.user.name %><br>
            <%= note.grade.grade %><br>
            <%= note.subject.subjectname %><br>
            <%= note.good %>
            <tr><%= link_to '詳細', note, class: "btn-flat-border" %></tr> 
            <tr><%= link_to '削除', note, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn-flat-border" %></tr> 
          </tr>
        </table>
        </td>
        </body>
    <% end %>
    </tr>
  </tbody>
  </table>
</tr>

</table>
